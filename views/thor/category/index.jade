extends ../layout/master

block content
  ol.breadcrumb.mb-4.mt-4
    li(class="breadcrumb-item active") Loại sản phẩm
  .row.mb-4.mt-4
    .col-md-6
      a.btn.btn-sm.btn-primary(href="/thor/category/create") Thêm mới
  .row
    .col-md-12
      if errorMsg.length || successMsg.length
        -var className = successMsg.length ? 'alert-success' : 'alert-danger'
        -var message = successMsg.length ? successMsg : errorMsg
        .alert.alert-dismissible.fade.show(class="#{className}")
          | #{message}
          button.close(type='button' data-dismiss='alert' aria-label='Close')
            span(aria-hidden='true') &times;
    .col-md-12
      table.table.table-striped
        thead
          tr
            th(scope='col' class="thead-id") #
            th(scope='col') Tên
            th(scope='col') Tác vụ
        tbody
          if categories.length
           each category, index in categories
              tr
                td= index + 1
                td= category.name
                td(class="td-action") 
                  a(href="/thor/category/edit/#{category.id}" class="btn btn-info btn-sm") Sửa
                  a(href="/thor/category/delete/#{category.id}" class="btn btn-danger btn-sm ml-1") Xóa


block style
  style.
   .thead-id {
      width: 150px;
   }

   .td-action {
     width: 200px;
   }