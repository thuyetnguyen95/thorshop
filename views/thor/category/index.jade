extends ../layout/master

block content
  ol.breadcrumb.mb-4.mt-4
    li(class="breadcrumb-item active") Loại sản phẩm
  .row.mb-4.mt-4
    .col-md-6
      a(href="/thor/category/create" class="btn btn-primary") Thêm mới
  .row
    .col-md-12
      table.table.table-striped
        thead
          tr
            th(scope='col' class="thead-id") #
            th(scope='col') Tên
            th(scope='col') Tác vụ
        tbody
          if categories.length
           each category, index in categories
              tr
                td= index + 1
                td= category.name
                td(class="td-action") 
                  a(href="/thor/category/edit/#{category.id}" class="btn btn-info btn-sm") Sửa
                  a(href="/thor/category/delete/#{category.id}" class="btn btn-danger btn-sm ml-1") Xóa


block style
  style.
   .thead-id {
      width: 150px;
   }

   .td-action {
     width: 200px;
   }