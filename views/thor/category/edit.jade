extends ../layout/master

block content

  nav(aria-label='breadcrumb' class="mb-4 mt-4")
    ol.breadcrumb
      li.breadcrumb-item
        a(href='/thor/category') Loại sản phẩm
      li.breadcrumb-item Chỉnh sửa
  hr
  .row
    .col-md-6
      //- .card.mb-4
      //-     .card-header
      //-       i.fa.fa-plus.mr-1
      //-       | Thêm mới một loại sản phẩm
      //-     .card-body
      //-       canvas#myAreaChart(width='100%', height='40')

      form(action="/thor/category/update/#{category.id}" method="post")
        .form-group
          label(for="lbName") Tên loại sản phẩm
          input#lbName.form-control(
            type="text"
            name="name"
            value="#{category.name}"
            minlength="3"
            maxlength="50"
            placeholder="Ex: bim bim asgard"
            oninvalid="this.setCustomValidity('Nhập đàng hoàng đi, đừng lầy lội')"
            required)
        button.btn.btn-success(type="submit") Cập nhật
