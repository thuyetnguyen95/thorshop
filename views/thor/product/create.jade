extends ../layout/master

block content

  nav(aria-label='breadcrumb' class="mb-4 mt-4")
    ol.breadcrumb
      li.breadcrumb-item
        a(href='/thor/product') Sản phẩm
      li.breadcrumb-item Thêm mới
  hr
  .row
    .col-md-6
      form(action="/thor/product/store" method="post" enctype="multipart/form-data")
        .form-group
          label(for='lbCategoryId') Loại sản phẩm
          select#lbCategoryId.form-control(name="categoryId" required)
            option(value="") -- Chọn 1 loại --
            each category in categories
              option(value=category.id)= category.name
          
          label(for="lbName" class="mt-2") Tên sản phẩm
          input#lbName.form-control(type="text" name="name" placeholder="Eg: chúc chích heo" required)
          
          .row.mt-2
            .col-md-6.col-sm-6.col-xs-12
              label(for="lbStock") Số lượng
              input#lbStock.form-control(type="number" name="stock")

            .col-md-6.col-sm-6.col-xs-12
              label(for="lbPrice") Giá
              input#lbPrice.form-control(type="number" name="price")

          .row.mt-2
            .col-md-6.col-sm-6.col-xs-12
              label(for="lbExpiry") Ngày hết hạn
              input#lbExpiry.form-control(type="date" name="expiryAt")

          label(for="lbImage" class="mt-2") Ảnh
          input#lbImage.form-control(type="file" name="image")
          
        a.btn.btn-secondary(href="/thor/product") Trở lại
        button.btn.btn-success.ml-2(type="submit") Lưu
