              tr
                th(scope='row') 3
                td Larry
                td the Bird
                td @twitter
              tr
                th(scope='row') 3
                td Larry
                td the Bird
                td @twitter

      .row
        .col-md-12
          h3 Các mặt hàng
    .col-md-4
      .bill-container
        form
          .form-group.row
            label.col-sm-4.col-form-label(for='xxx') Tổng số mặt hàng 
            .col-sm-8
              input#xxx.form-control(type='number' autocomplete="off")
          
          .form-group.row
            label.col-sm-4.col-form-label(for='xxx') Tổng tiền
            .col-sm-8
              input#xxx.form-control(type='number' autocomplete="off")
          
          .form-group.row
            label.col-sm-4.col-form-label(for='number') Nợ
            .col-sm-8
              input#xxx.form-control(type='text' autocomplete="off")
          
          .form-group.row
            label.col-sm-4.col-form-label(for='xxx') Note
            .col-sm-8
              input#xxx.form-control(type='text' autocomplete="off")
          
          .form-group.row
            label.col-sm-4.col-form-label(for='xxx') Something
            .col-sm-8
              input#xxx.form-control(type='text' autocomplete="off")
          
          .form-group.row.mt-5
            .col-sm-4.offset-sm-8.text-right
              button.btn.btn-success.btn-sm.btn-block(type='submit') Thanh toán

block style
  style.
    .thead-id {
        width: 50px;
    }

    .thead-image {
      width: 150px;
    }

    .thead-stock, .thead-price, .thead-status, .thead-action {
      width: 200px;
    }

    .td-name {
      text-transform: capitalize;
    }

    .product-image {
      width: 85px;
      height: 50px;
    }

    .table {
      min-width: 1000px;
    }

    .bill-container {
      padding: 0 30px;
    }